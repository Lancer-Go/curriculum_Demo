/* cur_list/cur.wxss */
#body{
  width:100%;
  height:100%;
  display:flex;
  flex-direction: column;
}
#th{
  width:100%;
  height:100%;
  display:flex;
  justify-content: space-between;
}
.day{
  width:13%;
  height:10%;
  border-bottom: 1px solid #ccc;
  border-right: 1px solid #ccc;
  text-align: center;
}
.empty{
  width:9%;
  border-bottom: 1px solid #ccc;
  border-right: 1px solid #ccc;
  text-align: center;
}
#tr{
  width:9%;
  height: 100%;
  display:flex;
  flex-direction: column;
}
.cur_num{
  text-align: center;
  padding:0;
  height:35px;
  border:1px solid #ccc;
  line-height: 40px;
}

.list{
  display:flex;
  flex-direction: column;
  width:14%;
  height:100%;
}
.tr_class{
  display:flex;
  flex-direction: row;
  width:100%;
  height:100%
}
.day_list{
  display:flex;
  flex-direction: row;
  width:100%;
  height:100%;
  justify-content: space-between;
}
.math{
  height:74px;
}
.buto_cur{
  padding: 4px;
  margin: 2px;
  font-size: 10px;
  height:74px;
  line-height: 17px;
  letter-spacing: 0;
  text-align: justify;
  vertical-align:middle;
  display:table-cell;
}