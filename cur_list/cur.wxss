#body{
  width:100%;
  height:100%;
  display:flex;
  flex-direction: column;
}
#th{
  width:100%;
  height:100%;
  display:flex;
  justify-content: space-between;
}
.day{
  width:13%;
  height:10%;
  border-bottom: 1rpx solid #ccc;
  border-right: 1rpx solid #ccc;
  text-align: center;
}
